<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">

  <form class="uk-form-stacked uk-text-left" action="/addComment" method="POST">
    <div class="uk-margin">
      <textarea class="uk-textarea" rows="10" placeholder="Comments" name="details"></textarea>
      <input type="hidden" name="_id" value="{{hive._id}}" id="_id">
    </div>
    <div class="uk-margin">
      <button class="submit uk-button uk-button-primary uk-button-large uk-width-1-1">Submit </button>
    </div>
  </form>

  <form class="uk-form-stacked uk-text-left" action="/images/{{hive._id}}" method="GET">
    <div class="uk-margin">
      <button class="submit uk-button uk-button-primary uk-button-large uk-width-1-1">Gallery </button>
    </div>
  </form>
  

  <form action="/deleteHive" method="POST">
    <div class="uk-margin">
      <button class="uk-button uk-button-danger uk-button-large uk-width-1-1">Delete Hive </button>
      <input type="hidden" name="deleteHive" value="{{hive._id}}" type="text">
    </div>
  </form>
  <button id="upload_widget" class="cloudinary-button">Upload files</button>

  <script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>

  <script type="text/javascript">
    var _id = document.getElementById("_id").value;
    var myWidget = cloudinary.createUploadWidget({
      cloudName: 'digabwjfx',
      uploadPreset: _id
    }, (error, result) => {
      if (!error && result && result.event === "success") {
        console.log('Done! Here is the image info: ', result.info);
      }
    }
    )

    document.getElementById("upload_widget").addEventListener("click", function () {
      myWidget.open();
    }, false);
  </script>
 
  <table class="uk-table">
    <caption>
      RECORDS
    </caption>
    <thead class="uk-text-left">
      <th>Hive Number</th>
      <th>Location</th>

    </thead>
    <tbody class="uk-text-left">
      {{#each hive.details}}

      <tr>
        <td> {{dateLogged}} </td>
        <td> {{comments}} </td>
      </tr>

      {{/each}}
    </tbody>
  </table>
</div>