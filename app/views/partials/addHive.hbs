<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
  <form class="uk-form-stacked uk-text-left" action="/addHive" method="POST">
    <fieldset class="uk-fieldset">

      <legend class="uk-legend">HIVE DETAILS</legend>

      <div class="uk-margin">
        <input class="uk-input uk-form-large" type="number" placeholder="Hive Number" name="hiveNumber">
      </div>

      <div class="uk-margin">
        <input class="uk-input uk-form-large" type="text" placeholder="Location" name="location">
      </div>

      <div class="uk-margin uk-grid-small uk-child-width-auto uk-grid" id="hiveType">
        <label><input class="uk-radio" type="radio" name="radio1"> Super</label>
        <label><input class="uk-radio" type="radio" name="radio2"> National</label>
      </div>

      <div class="uk-margin">
        <input class="uk-input uk-form-large" type="text" placeholder="Description" name="description">
      </div>

      <div class="uk-margin">
        <textarea class="uk-textarea" rows="10" placeholder="Comments" name="details"></textarea>
      </div>

      <div class="uk-margin">
        <button class="submit uk-button uk-button-primary uk-button-large uk-width-1-1">Submit</button>
      </div>

    </fieldset>
  </form>
</div>